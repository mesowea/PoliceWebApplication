@model IEnumerable<PoliceWebApplication.Street>

@{
    ViewData["Title"] = "Вулиці у містах";
}

<h1>Вулиці міста @ViewBag.CityName </h1>

<p>
   @Html.ActionLink("Додати нову вулицю", "Create", new { cityId = @ViewBag.CityId})
</p>

<p>
    <a asp-action="Return">Назад</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            
            <th>
                @Html.DisplayNameFor(model => model.City)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.City.Name)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
