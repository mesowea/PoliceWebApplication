@model IEnumerable<PoliceWebApplication.Models.User>

<h1><img src="~/css/police.png" width="100" height="100"> Список користувачів </h1>
<p><a class="btn btn-sm btn-outline-danger" asp-controller="Cities" asp-action="Index">Повернутися на головну сторінку Бази даних</a></p>
<h1></h1>
<a class="btn btn-sm btn-outline-danger" asp-controller="Account" asp-action="Create">Реєстація нового користувача</a>
<table class="table">
    <tr><th>Електронна пошта</th><th>Код</th><th></th></tr>
    @foreach (var user in Model)
    {
        <tr>
            <td>@user.Email</td>
            <td>@user.Code</td>
            <td>
                <a class="btn btn-sm btn-outline-primary" asp-action="Edit" asp-route-userid="@user.Id">Права доступу</a>
            </td>
            <td>
                <form asp-controller="Account" asp-action="Delete" asp-route-id="@user.Id" method="post">
                    <a class="btn btn-outline-danger" asp-controller="Account" asp-action="Edit" asp-route-userid="@user.Id">Редагування</a>
                    <button type="submit" class="btn btn-sm btn-outline-primary">
                        Видалити
                    </button>
                </form>
            </td>
        </tr>
    }
</table>
