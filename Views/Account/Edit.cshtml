@model PoliceWebApplication.Models.ViewModels.EditAccViewModel

<h1><img src="~/css/police.png" width="100" height="100"> Редагуання користувача  @Model.Email</h1>

<form asp-action="Edit" asp-controller="Account">
    <div asp-validation-summary="All" class="text-danger"></div>
    <div class="form-group">
        <input type="hidden" asp-for="Id" />
    </div>
    <div class="form-group">
        <label asp-for="Email" class="control-label">Email</label>
        <input type="text" asp-for="Email" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="Code" class="control-label">Код</label>
        <input type="text" asp-for="Code" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">Новий пароль</label>
        <input type="text" asp-for="NewPassword" class="form-control" />
    </div>
    <div class="form-group">
        <input type="submit" value="Зберегти" class="btn btn-outline-danger" />
        @Html.ActionLink("Назад", "Userlist", "Roles")
    </div>
</form>